{
	"manifest_version": 2,
  "name": "netmasked-privacy-plugin",
  "description": "Enables simple updates to hidden privacy settings, and monitors others",
  "author": "Netmask",
  "version": "2.0.0",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "browserSettings",
    "privacy",
    "nativeMessaging"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png"
  },

  "applications": {
    "gecko": {
      "id": "privacy_plugin@netmasked.com",
      "strict_min_version": "58.0"
    }
  },

  "background": {
    "scripts": ["content/index2.js"]
  }
  
}
